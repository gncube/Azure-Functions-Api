@page "/blogs"
@inject HttpClient http

<PageTitle>Blog Overview</PageTitle>
<h3>BlogOverview</h3>


<div class="container g-pt-50 g-pb-20">

    @if (Blogs == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="row justify-content-between">
            <div class="col-lg-12 g-mb-80">
                <div class="g-pr-20--lg">
                    <!-- Blog Minimal Blocks -->
                    @foreach (var blog in Blogs)
                    {
                        <div class="row g-mb-30">
                            <div class="col-lg-5 g-mb-30 g-mb-0--lg">
                                <article class="u-shadow-v19 g-bg-white rounded">
                                    <img class="img-fluid w-100 rounded-top" src="@blog.BlogName" alt="Image Description">
                                    <div class="g-pa-30">
                                        <h3 class="h5 g-font-weight-600 mb-3">
                                            <a class="u-link-v5 g-color-main g-color-primary--hover" href="@blog.CreatedOnDate">@blog.BlogName</a>
                                        </h3>
                                        <p class="g-font-size-16">@blog.BlogName @blog.CreatedOnDate</p>
                                    </div>
                                </article>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
</div>